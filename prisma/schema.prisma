// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  login            String    @unique
  username         String
  hashedPassword   String
  userAvatarImgUrl String
  createdAt        DateTime  @default(now())
  Room             Room?     @relation(fields: [activeRoomID], references: [id])
  activeRoomID     String?
  Message          Message[]
}

model Room {
  id             String    @id @default(cuid())
  name           String    @unique
  logoURL        String
  isPrivate      Boolean
  roomPassword   String
  createdAt      DateTime  @default(now())
  User           User[]
  roomMsgArr     Message[]
  // msgs in room array???
}

model Message {
  id    String   @id @default(cuid())
  textContent  String   @db.VarChar(255)
  sendByUser   User     @relation(fields: [sendByUserID], references: [id])
  sendByUserID String
  sendDate     DateTime @default(now())
  sendInRoom   Room     @relation(fields: [sendInRoomId], references: [id])
  sendInRoomId  String
}
